<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</head>
<body>
    <div class="container">
    <header class="display-2 mx-5 my-4">URL Shortener</header>
    <form action="/shrink" method="POST" class="form-inline my-2">
        <label class="sr-only" for="Original URL"></label>
        <input required placeholder="Enter Url" type="url" name="originalUrl" id="originalUrl" class="form-control mr-2">
        <button class="btn btn-primary my-4" type="submit">Shrink URL</button>
    </form>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Original URL</th>
                <th>Short URL</th>
                <th>Expiration Date</th>
            </tr>
        </thead>
        <tbody>
            <% list.forEach(obj => { %>
                <tr>
                    <td><a href="<%= obj.originalUrl %>"><%= obj.originalUrl %></a></td>
                    <td><a href="<%= obj.shortUrl %>"><%= obj.shortUrl %></a></td>
                    <td><%= obj.expirationDate %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>
    <% if(type === 'success') { %>
        <script>
            let message = "<%= msg %>"
            console.log(message)
            toastr.success(message, '', {timeOut: 5000, progressBar: true})
        </script> 
    <% } %>
    <% if(type === 'error') {%>
        <script>
            let message = "<%= msg %>"
            console.log(message)
            toastr.error(message, '', {timeOut: 5000, progressBar: true})
        </script>
    <% } %>
</body>
</html>